        public static List<TeamEvent> TeamEventListU10Boys 
        {
            get
            {
                var list = new List<TeamEvent>();
                DefaultEvents.Spring2015Events
                    .ForEach(x => list.Add(new TeamEvent
                                           {
                                                Event = x,
                                                Team = DefaultTeams.TeamU10Boys,
                                                IsActive = true,
                                                CreatedBy = lastUpdateBy,
                                                LastUpdateBy = lastUpdateBy,
                                                CreatedDateUtc = DateTime.UtcNow,
                                                LastUpdateUtc = DateTime.UtcNow
                                            }));
                return list;
            }
        }

